<p id="notice"><%= notice %></p>


<h1><%= @open_job.name %>,  <%= @open_job.company.name %>  </h1>



<h4><%= @open_job.description %></h4>

<p>
  <strong>Viimeinen hakupäivä</strong>
  <%= @open_job.expires %>
</p>

<% if current_user %>
	<div class="btn btn-primary" id="send_application_button"> New application </div>

	<div id="application_form" style="display:none;">
		<%= form_for(@application) do |f| %>
    		<%= f.hidden_field :open_job_id %>
 			<%= f.hidden_field :user_id %>
		<%= f.submit %>
		<% end %>
	</div>
<% end %>

</br>
<%= link_to 'Edit', edit_open_job_path(@open_job), 'data-no-turbolink' => true  %> |
<%= link_to 'Back', open_jobs_path, 'data-no-turbolink' => true  %>

<script>
$( document ).ready(function() {
    $( "#send_application_button" ).click(function() {
  		$( "#application_form" ).slideToggle( "slow", function() {
    	// Animation complete.
  		});
	});
});
</script>
