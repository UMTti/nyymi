<h1>Rekisteröidy</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    Käyttäjänimesi tulee näkyviin hakemuksiin. Sitä ei voi muuttaa.
    <%= f.text_field :username, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :realname %><br>
    Oikea nimesi ei tule näkyviin työhakemuksissa.
    <%= f.text_field :realname, class:"form-control" %>
  </div>
   <div class="field">
    <%= f.label :email %><br>
    Sähköpostiosoitteesi ei tule näkyviin työhakemuksissa. 
    <%= f.text_field :email, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :phonenumber %><br>
    Puhelinnumerosi ei tule näkyviin työhakemuksissa.
    <%= f.text_field :phonenumber, class:"form-control" %>
  </div>
   <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', users_path %>
